<%- include('../layouts/head.ejs'); %>
<style>
    div {
    padding-left: 10px;
    }
</style>
<main>
    <div class="jumbotron bg-light">
        <h1>Add Book</h1>
    </div>

    <button type="button" onclick="ShowDivAdd()" class="btn btn-primary">Add</button>
    <div id="addBook" style="display:none;" class="form-add">
        <form action="/book/add" method="post">
            <div class="form-group">
                <label for="">Name</label><br>
                <input type="text" name="name"><br>
            </div>
            <div class="form-group">
                <label for="">Price</label><br>
                <input type="text" name="price"><br>
            </div>
            <div class="form-group">
                <label for="">Book id</label><br>
                <input type="text" name="book_id"><br>
            </div>
            <div class="form-group">
                <label for="">Pages</label><br>
                <input type="text" name="pages">
            </div>
            <div class="form-group">
                <label for="">Rating</label><br>
                <input type="text" name="rating">
            </div>
            <div class="form-group">
                <label for="">Author Id</label><br>
                <input type="text" name="author_id">
            </div>
            <div class="form-group">
                <label for="">Genre Id</label><br>
                <input type="text" name="genre_id">
            </div>
            <div class="form-group">
                <button type="submit">Submit</button>
            </div>
        </form>
    </div>

  </main>
<script>
    function ShowDivAdd() {
    document.getElementById("addBook").style.display = "";
}
</script>

